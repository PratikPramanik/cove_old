					<legend>Date</legend>
					<select name="date">
						<option value=""></option>
						<% @days.each do |d| %>
							<option value="<%= d %>" <%= params[:date] == d ? "selected='1'" : "" %>><%= d %></option>
						<% end %>
					</select>
				</fieldset>
