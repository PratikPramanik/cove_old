							<label>
								<input type="radio" name="camera_angle" value="" <%= params[:camera_angle].nil? || params[:camera_angle] == "" ? "checked='1'" : "" %>/>All
							</label>
						</li>
						<% @angles.each do |a| %>
							<li>
								<label>
									<input type="radio" name="camera_angle" value="<%= a %>" <%= params[:camera_angle] == a ? "checked='1'" : "" %>/><%= a %>
								</label>
							</li>
						<% end %>
					</ul>
				</fieldset>
