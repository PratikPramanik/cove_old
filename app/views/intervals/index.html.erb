	</div>

	<!-- PRATIK's note:
	Let's have a RubyRails generated table inside this div...
	... somehow connected to the selections in div "filters"
	-->
	<div id="results">
		<table id="listints">
			<thead>
				<tr>
					<th>Session Type</th>
					<th>Phrase Name</th>
					<th>Filename</th>
					<th>Camera Angle</th>
					<th>Start Time</th>
					<th>Duration</th>
				</tr>
			</thead>
			<tbody>
				<% @filtered_intervals.each do |int| %>
					<tr>
						<td><%= int.session_type %></td>
						<td><%= int.phrase_name %></td>
						<td><%= link_to int.filename, int %></td>
						<td><%= int.camera_angle %></td>
						<td><%= int.start_time %></td>
						<td><%= int.duration %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
