<div class="grid_16 interval_show">

<h1 class=><%= @session_type %></h1> <!--Session Type-->

<h2 class="grid_10">Phrase(s): <%= @interval.phrase_name %></h2>
<h2>Type(s): <%= @interval.phrase_type %></h2>

<h3>Angles:</h3>


<h3>Phenomena:</h3>
<%= simple_form_for @interval do |f| %>
<div class="camera_angle_map">
	<%= f.input :camera_angle,  :collection => %w(daily2 mirror daily1 rear2 Wayne rear1), :as => :radio%>
	</div>
	<div class="tag_box">
	<%= f.association :tags, :as => :check_boxes %>
	</div>

	<%= f.button :submit %>

<% end %>
<br/>
<h4>Session <%= @interval.session_number %></h4>
<h4><%= @interval.start_time.strftime("%F") %></h4> <!-- Date-->

<div>
	<%= video_tag @interval.filename, :controls => true %>
</div>

<h4>Start: <%= @interval.start_time.strftime("%T") %></h4>
<h4>End: <%= @interval.end_time.strftime("%T") %></h4>
<h4>Duration: <%= (@interval.end_time - @interval.start_time.to_time.to_i).strftime("%T") %></h4>
<h4><%= @interval.filename %></h4> <!--filename-->

<%= link_to 'Edit', edit_interval_path(@interval) %> 
<%= link_to 'Back', intervals_path %>

</div>

