		<p>
                   &nbsp;
		</p>
	</div>
	<!-- end .grid_1 -->
	<div class="clear"></div>
	<div class="grid_13">
		<p>
                   &nbsp;
		</p>
	</div>
	<!-- end .grid_16 -->
	<div class="grid_3">
		<p>
                   Show more videos 
		</p>
	</div>
	<!-- end .grid_1 -->
	<div class="clear"></div>
</div>
<div container="container_16">
	<div class="grid_16">
		<h3>
		   Notes <span>(<%= link_to 'Edit', edit_project_path(@project) %>):</span>	
		</h3>
	</div>
	<!-- end .grid_16 -->
	<div class="grid_16">
		<p>
	           <%= @project.notes %>	
		</p>
	</div>
	<!-- end .grid_16 -->
	<div class="clear"></div>
	<div class="grid_16">
		<h3>
		   Tags <span>(<%= link_to 'Edit', edit_project_path(@project) %>):</span>	
		</h3>
	</div>
	<!-- end .grid_16 -->
	<div class="clear"></div>
	<div class="grid_16">
		<p>
                     <ul>
                          <% @project.tags.each do |t| %>
                             <li class="inline"><%= t.capitalize %></li>
                          <% end %>
                     </ul>
		</p>
	</div>
	<!-- end .grid_16 -->
	<div class="clear"></div>
	<div class="grid_16">
		<h3>
		   Owner <span>(<%= link_to 'Edit', edit_project_path(@project) %>):</span>	
		</h3>
                   <p><%= current_user.email %></p>
	</div>
	<!-- end .grid_16 -->
	<div class="clear"></div>
	<div class="grid_15">
		<p>
                   &nbsp;
		</p>
	</div>
	<div class="grid_1">
		<p>
                   <%= link_to 'Destroy', @project , :confirm => 'Are you sure?', :method => :delete  %>
		</p>
	</div>
	<div class="clear"></div>
      <% else %>

	<div class="grid_16">
		<p>
		    Sorry, but this project is private. 
		</p>
	</div>
	<!-- end .grid_16 -->
	<div class="clear"></div>

      <% end %>
   <% end %>
<% else %>

   <div class="grid_16">
      <p>
         Please log in to access projects.
      </p>
   </div>

<% end %>
