<style>

li.inline {
   display: inline;
   list-style-type: none;
   margin: 10px 20px 10px 0px;
}

h2 {
   font-size: 2em;
   color: #00fa9a;
   padding: 0px 0px 5px 0px;
}

h3 {
   font-size: 1.5em;
   color: #666;
   padding: 10px 0px 5px 0px;
}

h3 span {
   font-size: 0.7em;
}

.vid-title {
   font-weight: bold;
   padding: 10px 0px 5px 0px;
}

.vid-comment {
   padding: 10px 0px 5px 0px;
}

#vid-cont {
	background: #999;
        padding: 10px 0px;
   color: #000;
}

.left-arw {border-color:transparent #00fa9a transparent transparent;}
.right-arw {border-color:transparent transparent transparent #00fa9a;}

</style>

<div class="container_16">
<% if user_signed_in? %>
   <% if @project %>
      <% if @project.user_id == current_user.id %>
	<div class="grid_15">
		<p>
                   &nbsp;
		</p>
	</div>
	<!-- end .grid_16 -->
	<div class="grid_1">
		<p>
                   <%= link_to 'Back', projects_path %>
		</p>
	</div>
	<!-- end .grid_1 -->
	<div class="clear"></div>
	<div class="grid_16">
		<h3>
		   Project <span>(<%= link_to 'Edit', edit_project_path(@project) %>):</span>	
		</h3>
	</div>
	<!-- end .grid_16 -->
	<div class="clear"></div>
	<div class="grid_16">
		<h2>
		   <%= @project.name %> 
		</h2>
	</div>
	<!-- end .grid_16 -->
	<div class="clear"></div>
	<div class="grid_10">
		<h3>
		   Featured Video	
		</h3>
	</div>
	<!-- end .grid_10 -->
	<div class="grid_6">
		<h3>
		   Elevator Pitch <span>(<%= link_to 'Edit', edit_project_path(@project) %>):</span>	
		</h3>
	</div>
	<div class="clear"></div>
	<div class="grid_10">
		<p style="height: 300px;">
		      In the coming weeks, you will be able to display an video here to inspire and energize you for your project.	
		</p>
	</div>
	<!-- end .grid_10 -->
	<div class="grid_6">
		<p>
		   <%= @project.desc %> 
		</p>
	</div>
	<!-- end .grid_6 -->
	<div class="clear"></div>
	<div class="grid_1">
		<p>
<div class="left-arw" style="margin:10px;float:left;border-width:15px; border-style:solid;width:0px;height:0px;line-height:0px;"><!-- --></div>
		</p>
	</div>
	<!-- end .grid_1 -->
	<div class="grid_14" style="text-align:center;">
		<h3>
